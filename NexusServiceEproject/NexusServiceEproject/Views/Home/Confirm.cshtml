
@{
    ViewBag.Title = "Confirm";
}

<br/> <br />
<div class="alert alert-warning" id="previous">
    <strong>Confirm Your Account</strong>
    <input type="submit" class="btn btn-warning"  value="confirm" onclick="Verified()"/>
</div>
<div class="alert alert-success" id="after">
    <strong><span class="glyphicon glyphicon-ok">Your account IS Activate Now</span></strong>
</div>
<script>
    function Verified() {
        $.ajax({
            type: "post",
            url: "/User/RegisterConfirm",
            data: {'regID':'@ViewBag.regID' },
            success : function(msg){
                $("#previous").hide();
                $("#after").show();
                alert(msg);

            }

        })
    }
</script>
